{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
      "ENV": true
  },
  "extends": "eslint:recommended",
  "plugins": ["html"],
  "rules": {
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "semi": ["warn", "always"],
    "no-console": "off",
    "no-extra-boolean-cast": "off"
  }
}
